_pkgname=kubectl-ai
pkgname=$_pkgname-bin
pkgver=0.0.22 # renovate: datasource=github-releases depName=GoogleCloudPlatform/kubectl-ai
pkgrel=1
pkgdesc="AI powered Kubernetes Assistant"
url="https://github.com/GoogleCloudPlatform/$_pkgname"
license=('Apache-2.0')
source=(
  "$_pkgname-$pkgver.tar.gz::$url/releases/download/v$pkgver/${_pkgname}_Linux_x86_64.tar.gz"
)
arch=('x86_64')
sha512sums=('f5e4e5bc68708664f0a4e06bcbda1fb162d30f263836a2cb0ba716fc720d98d5f17174fd07e75a109beafb569685c9e309e5aa271ad61d0289755f45d951eea2')
conflicts=("$_pkgname" "${_pkgname}-git")

package() {
  install -D -m 0755 "$srcdir/$_pkgname" "$pkgdir/usr/bin/$_pkgname"
}

